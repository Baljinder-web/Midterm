@model Book

<h2>You Are Editing Book Name|| @Model.Title ||</h2>
<div class="container">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>


        <div class="mb-3">
            <label asp-for="Author" class="form-label">Author</label>
            <input type="text" asp-for="Author" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="GenreId" class="form-label">Genre</label>
            <select asp-for="GenreId" class="form-select">
                <option value="">Choose Genre</option>
                @foreach (var genre in ViewBag.Genres)
                {
                    <option value="@genre.GenreId">@genre.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label">Year</label>
            <input type="text" asp-for="Year" class="form-control" />
        </div>


        <div class="mb-2">
            <label asp-for=" IsAvailability ">Availability of Book:</label>
            <input type="checkbox" asp-for=" IsAvailability " />
        </div>

        <input type="hidden" asp-for="BookId" />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Booklist" class="btn btn-primary">Cancel</a>
    </form>
</div>