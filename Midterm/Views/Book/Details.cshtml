@model Book;
@*
    
    PAGE FOR BOOK DETAILS
*@

@{
    ViewData["Title"] = "== Your Book Details ==";


}

<h2>Details About Selected Book: @Model.Title</h2>

<div class="container mt-5">

    <table class="table table-bordered border-primary">
        <tr>
            <th>Title</th>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>@Model.Author</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>@Model.Genre.Name</td>
        </tr>
        <tr>
            <th>Year</th>
            <td>@Model.Year</td>
        </tr>

        <tr>
            <th>Book Issue</th>
            <td>@ViewBag.MemberName</td>
            
        </tr>

        <tr>
            <th>Available</th>

            @if (Model.IsAvailability)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
        </tr>



        <tr>
            <th>Edit</th>
            <td><a asp-action="Edit" asp-route-id="@Model.BookId">Click </a></td>
        </tr>

        <tr>
            <th>Delete</th>

            <td><a asp-action="Delete" asp-route-id="@Model.BookId">Click</a></td>


        </tr>


    </table>
</div>

<form class="row g-3">
    <div class="col-md-6">
        <a asp-controller="Book" asp-action="Booklist" class="btn btn-primary">View Books </a>
    </div>
    <div class="col-md-4">
        <a asp-controller="Book" asp-action="AddBook" class="btn btn-secondary">Add Book</a>
    </div>
</form>

