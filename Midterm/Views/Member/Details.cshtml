@model Member;
@*

    PAGE FOR BOOK DETAILS
*@

@{
    ViewData["Title"] = "== Your Member Details ==";


}

<h2>Details About Selected Book: @Model.Name</h2>

<div class="container mt-5">

    <table class="table table-bordered border-primary">
        <tr>
            <th>Member Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Member Phone</th>
            <td>@Model.PhoneNumber</td>
        </tr>

        <tr>
            <th>Member</th>
            <td>@Model.Email</td>
        </tr>

        
         <tr>
            <th>Book Issue</th>
            @if (@Model.HasIssuedBook)
            {
              <td>@Model.Book.Title</td> 
            }
            else
            {
              <td>No book issued</td>
            }
        </tr>





        <tr>
            <th>Edit</th>
            <td><a asp-action="Edit" asp-route-id="@Model.MemberId">Click </a></td>
        </tr>

        <tr>
            <th>Delete</th>

            <td><a asp-action="Delete" asp-route-id="@Model.MemberId">Click</a></td>


        </tr>


    </table>
</div>

<form class="row g-3">
    <div class="col-md-6">
        <a asp-controller="Member" asp-action="Memberlist" class="btn btn-primary">View Books </a>
    </div>
    <div class="col-md-4">
        <a asp-controller="Member" asp-action="AddMember" class="btn btn-secondary">Add Book</a>
    </div>
</form>

